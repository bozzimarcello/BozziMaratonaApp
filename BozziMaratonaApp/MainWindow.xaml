<Window x:Class="BozziMaratonaApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BozziMaratonaApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="400">
    <StackPanel>
        <Button x:Name="BtnLeggiFile" Content="Leggi da file" Click="BtnLeggiFile_Click"/>
        <DataGrid x:Name="DgrElenco" />
        <Label Content="Ricerca per nome e città"/>
        <Label Content="Nome"/>
        <TextBox x:Name="TxtNome" />
        <Label Content="Città"/>
        <TextBox x:Name="TxtCittà" />
        <Button x:Name="BtnCercaNome" Content="Cerca per nome e città" Click="BtnCercaNome_Click"/>
        <Label x:Name="LblTempo" />
    </StackPanel>
</Window>
